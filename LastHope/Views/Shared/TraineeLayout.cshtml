<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Training Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@Html.Partial("_LoginPartial")
<body>
    <div id="wrapper">
        <div class="overlay">
        </div>
        <ul class="nav sidebar-nav">
            <li class="sidebar-brand">
                @Html.ActionLink("Training Management", "Home", "Staffs", new { area = "" }, new { @class = "glyphicon glyphicon-user" })
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">
                    Trainees
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    @Html.ActionLink("Information", "Index", "Trainees")
                    @Html.ActionLink("Enrollments", "Index", "Enrollment")
                </ul>

            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">
                    Trainers
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    @Html.ActionLink("Information", "Index", "Trainers")
                    @Html.ActionLink("Assigned", "Index", "TrainerAssign")
                </ul>
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">
                    Courses
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    @Html.ActionLink("Information", "Index", "Courses")
                    @Html.ActionLink("Categories", "Index", "CourseTopics")
                </ul>

            <li>@Html.ActionLink("Profile", "Details", "Staffs")</li>

        </ul>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Group 2</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
